{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "esnext"
    ],
    "moduleDetection": "force",
    "noEmit": true,
    "module": "Node16",            // Ensure 'module' is set to 'Node16'
    "moduleResolution": "Node16",  // Ensure 'moduleResolution' is also set to 'Node16'
    "target": "ESNext",            // You can adjust the target as per your requirements
    "esModuleInterop": true,       // This is typically useful when working with non-ESM libraries
    "skipLibCheck": true,           // Optional, helps improve build performance by skipping type checking of declaration files
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "bun-types"
    ],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "app/work-section/projectDetails.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "main/types/**/*.ts",
    "dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
